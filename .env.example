# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3000
GRPC_ENABLED=false
GRPC_PORT=50051
LOG_LEVEL=info
SERVICE_NAME=my-microservice
# SERVICE_VERSION is read from package.json

# ============================================
# SECURITY
# ============================================
# CORS (comma-separated origins for production)
CORS_ORIGINS=https://app.example.com,https://admin.example.com

# JWT Authentication (min 32 characters)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=1h
JWT_ISSUER=my-app

# Encryption (for sensitive data, optional - falls back to JWT_SECRET)
# ENCRYPTION_KEY=your-encryption-key-min-32-characters

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# DATABASE (MySQL)
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=secret
DB_NAME=my_database
DB_CONNECTION_LIMIT=100
DB_QUEUE_LIMIT=0
DB_CONNECT_TIMEOUT=10000
DB_MULTIPLE_STATEMENTS=true

# ============================================
# REDIS CACHE
# ============================================
REDIS_SERVER=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_VHOST=my_cache
REDIS_ENABLED=true
CORE_AUTO_FEATURES=true

# ============================================
# RABBITMQ (Optional)
# Queue naming: {SERVICE_NAME}_{NODE_ENV}_{DEVICE_ID}_{queue_type}
# Example: knowledge_development_macbook1_file_processing
# ============================================
RABBITMQ_ENABLED=false
RABBITMQ_HOST=34.170.206.207
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=root
RABBITMQ_PASSWORD=Ll123456@.
RABBITMQ_VHOST=dev
# Device identifier for queue isolation (e.g., macbook1, server1, ci-runner)
RABBITMQ_DEVICE_ID=local
RABBITMQ_PREFETCH=10

# ============================================
# OBSERVABILITY
# ============================================
# OpenTelemetry (Jaeger, Grafana Tempo, etc.)
OTEL_ENABLED=false
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
# OTEL_EXPORTER_OTLP_HEADERS=Authorization=Bearer xxx

# Sentry Error Tracking
# SENTRY_DSN=https://xxx@sentry.io/xxx
# SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# MIGRATIONS
# ============================================
# Prefix for migration files (e.g., auth_20251208123456_add_table.ts)
# Change this to your service name: auth, settings, keywords, integrations, social, etc.
MIGRATION_PREFIX=myservice

# ============================================
# MISC
# ============================================
TIMEZONE=+00:00
SHUTDOWN_TIMEOUT_MS=30000
