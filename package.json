{
  "name": "microservice-boilerplate",
  "version": "1.0.0",
  "description": "Production-Ready TypeScript Microservice Boilerplate - Clean Architecture Template",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:otel": "tsx watch --import ./src/instrumentation.ts src/index.ts",
    "build": "tsc && copyfiles -u 1 \"src/grpc/protos/**/*\" dist/",
    "start": "node dist/index.js",
    "start:otel": "node --import ./dist/instrumentation.js dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "migrate": "tsx node_modules/.bin/knex migrate:latest --knexfile knexfile.ts",
    "migrate:rollback": "tsx node_modules/.bin/knex migrate:rollback --knexfile knexfile.ts",
    "migrate:make": "tsx node_modules/.bin/knex migrate:make --knexfile knexfile.ts -x ts",
    "seed": "tsx node_modules/.bin/knex seed:run --knexfile knexfile.ts",
    "seed:make": "tsx node_modules/.bin/knex seed:make --knexfile knexfile.ts -x ts",
    "prepare": "husky"
  },
  "keywords": [
    "microservice",
    "clean-architecture",
    "typescript",
    "fastify",
    "grpc",
    "production-ready",
    "boilerplate"
  ],
  "author": "berkeerdo (https://github.com/berkeerdo)",
  "license": "UNLICENSED",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/under-pressure": "^9.0.3",
    "@grpc/grpc-js": "^1.14.1",
    "@grpc/proto-loader": "^0.8.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.2",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.208.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-metrics": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@sentry/node": "^10.27.0",
    "amqplib": "^0.10.9",
    "awilix": "^12.0.5",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "node-caching-mysql-connector-with-redis": "^2.7.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@types/amqplib": "^0.10.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.1",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
